<% if @creations.any? %>
  <% @creations.each do |creation| %>
    <p> <%= link_to creation.name, creation_path(creation) %> </p>
    <%= image_tag creation.image.url(:thumb, full_url: true) %>
  <% end %>
<% else %>
  <p>No creations yet</p>
<% end %>

<%= link_to "Add a creation", new_creation_path %>
